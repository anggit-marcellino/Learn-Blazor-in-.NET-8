@page "/inventories"

<h3>Inventory List</h3>
<br />
<br />
<EditForm Model="inventoryNameSearch" FormName="formSearchInv">
	<div class="input-group">
		<InputText class="form-control" placeholder="Type inventory here to search" @bind-Value="this.inventoryNameSearch">
		</InputText>
		<button type="submit" class="btn-success input-group-text">Search</button>
	</div>
</EditForm>
<br />
<IMS.WebApp.Components.Controls.InventoryListComponent SearchInventoryFilter="@inventoryNameSearch"></IMS.WebApp.Components.Controls.InventoryListComponent>
<br />
<a href="/addinventory" class="btn btn-primary">Add Inventory</a>

@code {
	[SupplyParameterFromForm]
	private string inventoryNameSearch { get; set; } = string.Empty;

}
